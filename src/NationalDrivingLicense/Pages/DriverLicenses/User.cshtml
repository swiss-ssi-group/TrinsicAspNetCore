@page
@model NationalDrivingLicense.Pages.DriverLicenses.UserModel

@{
    ViewData["Title"] = "User";
}

<h3>Driver Licenses for @Model.DriverLicense[0].UserName</h3>

<p>
    <a asp-page="Create" asp-route-id="@Model.UserName">Add New License</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].IssuedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].LicenseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].Issuedby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense[0].Valid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DriverLicense) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issuedby)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valid)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
