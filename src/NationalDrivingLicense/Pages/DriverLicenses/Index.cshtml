@page
@model NationalDrivingLicense.Pages.DriverLicenses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicence[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicence[0].IssuedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicence[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicence[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicence[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicence[0].Issuedby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicence[0].Valid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DriverLicence) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issuedby)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valid)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
